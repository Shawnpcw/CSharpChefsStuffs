@model Dish 

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title></title>
  </head>
  <body>
      <div class="container">
            <h1>Add a new Dish</h1>
        <div class="row">
            <a href="/">Home</a>
        </div>
        <div class="row">
            
            <form class="form mt-5" asp-action="dish" asp-controller="create" method="post">

                    <span asp-validation-for="dishName"></span>
                    <input type="text" class="form-control" placeholder="Name of Dish" asp-for="dishName">

                    <span asp-validation-for="calories"></span>
                    <input type="number" class="form-control" placeholder="Number of Calories" asp-for="calories" min="0" value="">

                    <select class="form-control" asp-for="ChefId">
                            <option selected disabled hidden>Choose Chef</option>
                            @{
                                foreach(var i in ViewBag.returned){
                                <option value="@i.id">@i.name</option>
                                
                                }
                            }
                           
                        </select>
                    <span asp-validation-for="tasteLevel"></span>
                    <select class="form-control" asp-for="tasteLevel">
                        <option selected disabled hidden>Taste Level (Pick Value)</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <span asp-validation-for="description"></span>
                    <textarea asp-for="description" class="form-control" style="resize: none" cols="30" rows="10" placeholder="Description"></textarea>
        
                    <input type="submit" value="Add Dish" class="btn btn-primary mt-3">
            </form>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>